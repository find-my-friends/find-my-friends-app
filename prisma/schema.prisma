generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String

  groupEvents GroupEvent[] @relation("UserCreatedEvents")
  attendances Attendee[]   @relation("UserAttendances")
}

enum Condition {
  excellent
  good
  fair
  poor
}

model GroupEvent {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  location    String
  date        DateTime
  tags        String[]

  createdBy   User @relation("UserCreatedEvents", fields: [createdById], references: [id])
  createdById Int

  attendees Attendee[]
  createdAt DateTime   @default(now())
}

model Attendee {
  id Int @id @default(autoincrement())

  user   User @relation("UserAttendances", fields: [userId], references: [id])
  userId Int

  event   GroupEvent @relation(fields: [eventId], references: [id])
  eventId Int

  joinedAt DateTime @default(now())

  @@unique([userId, eventId])
}
