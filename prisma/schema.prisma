// This is your Prisma schema file,
// Learn more at: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // Use this for Vercel Postgres
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")

  // Optional: Use this for local dev with Docker or local Postgres
  // url = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  role     Role   @default(USER)
}

model Event {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  date        DateTime
}

model GroupEvent {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  date        DateTime
  location    String
  createdById Int
  tags        String[]  // optional: switch to Json if needed
}

model Student {
  id       String   @id @default(uuid())
  name     String
  major    String
  year     String
  hobbies  String[]
  bio      String
  image    String
  owner    String   @unique
}
